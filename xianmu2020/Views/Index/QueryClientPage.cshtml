
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>QueryClientPage</title>
</head>
<body>
    <div class="container">
        <div class="row" style="margin-top:10px; margin-left:-92px; width:1126px; border:0px solid black;background-color:#37435c;border-radius:2px;">
            <div class="col-md-8">
                @*<label class="control-label">入库管理</label>*@
                <h5 style="font-size:15px;font-weight:bold;color:white">客户管理</h5>
            </div>
        </div>
        <div class="row" style="margin-left:-92px;  border:0px solid black;width:1126px;background-color:#f5f8f8">

            <div class="col-md-3 form-group form-inline" style="margin-top:13px;float:right;margin-right:-57px;">
                <button id="BtnAddKH" type="button" class="btn btn-primary">新增客户</button>
                <button type="button" class="btn btn-info">导出</button>
            </div>
            <div class="row">
                <div class="col-md-3" style="margin-top:15px;margin-left:13px;">
                    <input type="text" class="form-control" placeholder="请输入客户编号或名称" />
                </div>
                <div class="col-md-1" style="margin-top:15px;margin-left:-21px;">
                    <button type="button" class="btn btn-primary">搜索</button>
                </div>

            </div>

            <div class="row" style="margin-top:25px;">
                <table class="table table-bordered table-hover table-responsive" style=" width:1043px;margin-left:28px; border:1px solid #e07a7a;">
                    <thead>
                        <tr style="font-weight:bold;">
                            <td>客户编号</td>
                            <td>客户名称</td>
                            <td>电话</td>
                            <td>传真</td>
                            <td>创建时间</td>
                            <td>操作</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>客户编号1</td>
                            <td>客户名称1</td>
                            <td>电话1</td>
                            <td>传真1</td>
                            <td>创建时间1</td>
                            <td>
                                <a id="UpdateKeHu" href="#"><span class="glyphicon glyphicon-edit"></span></a>&nbsp;&nbsp;
                                <a href="#"><span style="color:red" class="glyphicon glyphicon-trash"></span></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row form-inline form-group text-center" style="margin-top:30px;margin-right:30px;">
                <button type="button" class="btn btn-primary form-group">首页</button>
                <button type="button" class="btn btn-primary form-group">上一页</button>
                <input type="text" class="form-control" style="width:80px;" />
                <button type="button" class="btn btn-primary form-group">Go</button>
                <button type="button" class="btn btn-primary form-group">下一页</button>
                <button type="button" class="btn btn-primary form-group">尾页</button>
            </div>
        </div>
    </div>

    @*新增客户*@
    <div class="modal fade" id="myModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document" style="margin:0px auto; width:800px;height:300px;">
            <div class="modal-content">
                <div class="modal-header" style="color:white; border:0px solid black ;height:50px;background-color:#37435c">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">新增客户</h4>
                </div>
                <div class="modal-body" id="cnt" style="border:1px solid pink;height:100px;  ">

                    <div class="row form-inline form-group">
                        <div class="col-md-1">
                            <label class="control-label">编号</label>
                        </div>
                        <div class="col-md-3" style="margin-top:-8px;margin-left:-30px;">
                            <input type="text" class="form-control" disabled="disabled" />
                        </div>
                        <div class="col-md-1">
                            <label class="control-label">名称</label>
                        </div>
                        <div class="col-md-3" style="margin-top:-8px;margin-left:-30px;">
                            <input type="text" class="form-control" placeholder="请输入客户名称" />
                        </div>
                        <div class="col-md-1">
                            <label class="control-label">传真</label>
                        </div>
                        <div class="col-md-3" style="margin-top:-8px;margin-left:-30px;">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="row form-inline form-group">
                        <div class="col-md-1">
                            <label class="control-label">Email</label>
                        </div>
                        <div class="col-md-3" style="margin-top:-8px;margin-left:-30px;">
                            <input type="text" class="form-control"  />
                        </div>
                        <div class="col-md-1">
                            <label class="control-label">电话</label>
                        </div>
                        <div class="col-md-3" style="margin-top:-8px;margin-left:-30px;">
                            <input type="text" class="form-control" />
                        </div>                       
                    </div>                 
                </div>
                <div class="row" style="width:778px;margin:0px auto;height:200px;">
                    <table class="table table-bordered table-responsive">
                        <thead>
                            <tr style="font-weight:bold;">
                                <td>地址编号</td>
                                <td>地址</td>
                                <td>联系人</td>
                                <td>电话</td>
                                <td>操作</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>地址编号1</td>
                                <td>地址1</td>
                                <td>联系人1</td>
                                <td>电话1</td>
                                <td><a href="#"><span style="color:red" class="glyphicon glyphicon-trash"></span></a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button id="BtnAddDiZhi" type="button" class="btn btn-primary">新增地址</button>
                    <button type="button" class="btn btn-primary">确定</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">取消</button>
                </div>
            </div>
        </div>
    </div>

    @*新增地址*@
    <div class="modal fade" id="myModal2" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document" style="width:400px;">
            <div class="modal-content">
                <div class="modal-header" style="color:white; background-color:#37435c;">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">新增地址</h4>
                </div>
                <div class="modal-body" id="cnt">
                    <div class="row form-inline form-group" style="margin-top:10px;">
                        <div class="col-md-4">
                            <label class="control-label">地址编号</label>
                        </div>
                        <div class="col-md-8" style="margin-left:-20px;margin-top:-10px;">
                            <input type="text" class="form-control" disabled="disabled" placeholder="自动生成，可不填" />
                        </div>
                    </div>
                    <div class="row form-inline form-group" style="margin-top:10px;">
                        <div class="col-md-4">
                            <label class="control-label">地址</label>
                        </div>
                        <div class="col-md-8" style="margin-left:-20px;margin-top:-10px;">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="row form-inline form-group" style="margin-top:10px;">
                        <div class="col-md-4">
                            <label class="control-label">联系人</label>
                        </div>
                        <div class="col-md-8" style="margin-left:-20px;margin-top:-10px;">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="row form-inline form-group" style="margin-top:10px;">
                        <div class="col-md-4">
                            <label class="control-label">电话</label>
                        </div>
                        <div class="col-md-8" style="margin-left:-20px;margin-top:-10px;">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">确定</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">关闭</button>
                </div>
            </div>
        </div>
    </div>

    @*修改客户信息*@
    <div class="modal fade" id="myModal3" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document" style="margin:0px auto; width:800px;height:300px;">
            <div class="modal-content">
                <div class="modal-header" style="color:white; border:0px solid black ;height:50px;background-color:#37435c">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">编辑客户</h4>
                </div>
                <div class="modal-body" id="cnt" style="border:1px solid pink;height:100px;  ">

                    <div class="row form-inline form-group">
                        <div class="col-md-1">
                            <label class="control-label">编号</label>
                        </div>
                        <div class="col-md-3" style="margin-top:-8px;margin-left:-30px;">
                            <input type="text" class="form-control" disabled="disabled" />
                        </div>
                        <div class="col-md-1">
                            <label class="control-label">名称</label>
                        </div>
                        <div class="col-md-3" style="margin-top:-8px;margin-left:-30px;">
                            <input type="text" class="form-control" />
                        </div>
                        <div class="col-md-1">
                            <label class="control-label">传真</label>
                        </div>
                        <div class="col-md-3" style="margin-top:-8px;margin-left:-30px;">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="row form-inline form-group">
                        <div class="col-md-1">
                            <label class="control-label">Email</label>
                        </div>
                        <div class="col-md-3" style="margin-top:-8px;margin-left:-30px;">
                            <input type="text" class="form-control" />
                        </div>
                        <div class="col-md-1">
                            <label class="control-label">电话</label>
                        </div>
                        <div class="col-md-3" style="margin-top:-8px;margin-left:-30px;">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row" style="width:778px;margin:0px auto;height:200px;">
                    <table class="table table-bordered table-responsive">
                        <thead>
                            <tr style="font-weight:bold;">
                                <td>地址编号</td>
                                <td>地址</td>
                                <td>联系人</td>
                                <td>电话</td>
                                @*<td>操作</td>*@
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>地址编号1</td>
                                <td>地址1</td>
                                <td>联系人1</td>
                                <td>电话1</td>
                                @*<td><a href="#"><span style="color:red" class="glyphicon glyphicon-trash"></span></a></td>*@
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">确定</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">取消</button>
                </div>
            </div>
        </div>
    </div>


    <script type="text/javascript">
        //添加客户对话框
        $("#BtnAddKH").click(function () {
            $("#myModal").modal();
        })
        //添加地址对话框
        $("#BtnAddDiZhi").click(function () {
            $("#myModal2").modal();
        })
        //修改地址对话框
        $("#UpdateKeHu").click(function () {
            $("#myModal3").modal();
        })
    </script>

</body>
</html>
