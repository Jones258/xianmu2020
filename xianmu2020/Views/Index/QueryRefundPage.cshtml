            </div>
        </div>
    </div>

    <script type="text/javascript">
        $("#UpdateTuiHuo").click(function () {
            $("#myModal").modal();
        })
        //打开退货详情
        $("#THXQ").click(function () {
            $("#myModal2").modal();
        })

        var pageIndexValue = 1;
        var ztValue = 0;
        var ZhuanTai = null;
        $(function () {

            //状态切换
            $("[name=sy]").click(function () {
                ztValue = 0;
            })
            $("[name=dsh]").click(function () {
                ztValue = 1;
            })
            $("[name=shtg]").click(function () {
                ztValue = 2;
            })
            $("[name=shsb]").click(function () {
                ztValue = 3;
            })
            $(".btn2").click(function () {
                BindData()
            })

            //加载数据
            BindData();
            $("#btnSY").click(function () {
                pageIndexValue = 1;
                BindData();
            })
            $("#btnSYY").click(function () {
                pageIndexValue = pageIndexValue - 1;
                BindData();
            })
            $("#btnGo").click(function () {
                pageIndexValue = parseInt($("#textPageIndex").val());
                BindData();
            })
            $("#btnXYY").click(function () {
                pageIndexValue = pageIndexValue + 1;
                BindData();
            })
            $("#WY").click(function () {
                pageIndexValue = 999999;
                BindData();
            })
            //模糊查询
            $("#btn").click(BindData);
        })

        //加载数据方法
        function BindData() {
            var RefundTypes = null;
            var RefundState = null;
            var RefundIdValue = $("[name=RefundId]").val();
            var StartValue = $("[name=Start]").val();
            var EndValue = $("[name=End]").val();
            $.ajax({
                url: "@Url.Action("GetRefun")",
                data: { RefundId: RefundIdValue, PageIndex: pageIndexValue, Start: StartValue, End: EndValue, zt: ztValue },
                dataType: "json",
                type: "get",
                success: function (RefundResult) {
                    $("#txtLabel").html("当前第" + RefundResult.PageIndex + "页 / 共计" + RefundResult.PageCount + " 页 共计" + RefundResult.Count + " 条");
                    $("#textPageIndex").val(RefundResult.PageIndex);
                    pageIndexValue = RefundResult.PageIndex;
                    $("table tr:gt(0)").remove();
                    $.each(RefundResult.RefundAction, function (index, value) {
                        ZhuanTai = value.Rid;
                        var str = "<tr>";
                        str += "<td><input type=\"checkbox\" /></td>";
                        str += "<td>" + value.RefundId + "</td>";
                        if (value.Standby1 == 7) {
                            RefundTypes = "销售退货";
                        } else if (value.Standby1 == 8) {
                            RefundTypes = "采购退货";
                        }
                        str += "<td>" + RefundTypes + "</td>";
                        str += "<td>" + value.RefundCount + "</td>";
                        if (value.RefundAuditState == 1) {
                            RefundState = "待审核";
                        } else if (value.RefundAuditState == 2) {
                            RefundState = "审核通过";
                        } else if (value.RefundAuditState == 3) {
                            RefundState = "审核失败";
                        }
                        str += "<td>" + RefundState + "</td>";
                        str += "<td>" + value.PreparedMan + "</td>";
                        str += "<td>" + value.PreparedTime + "</td>";
                        if (value.RefundAuditState == 2) {
                            str += "<td><a id=\"UpdateRuKu\"  href=\"# \"><span  class=\"glyphicon glyphicon-edit \"></span></a>&nbsp;&nbsp;&nbsp;<a onclick=\"deleteState()\" href=\"#\"><span style=\"color:red\" class=\"glyphicon glyphicon-trash\"></span></a></td>";
                        } else if (value.RefundAuditState == 3) {
                            str += "<td><a id=\"UpdateRuKu\"  href=\"# \"><span  class=\"glyphicon glyphicon-edit \"></span></a>&nbsp;&nbsp;&nbsp;<a onclick=\"deleteState()\" href=\"#\"><span style=\"color:red\" class=\"glyphicon glyphicon-trash\"></span></a></td>";
                        } else {
                            str += "<td><a id=\"UpdateRuKu\"  href=\"# \"><span  class=\"glyphicon glyphicon-edit \"></span></a>&nbsp;&nbsp;&nbsp;<a onclick=\"deleteState()\" href=\"#\"><span style=\"color:red\" class=\"glyphicon glyphicon-trash\"></span></a>&nbsp;&nbsp;&nbsp;<a onclick=\"RefundAuditStateUp1()\" href=\"#\"><span  class=\"glyphicon glyphicon-thumbs-up\"></span></a>&nbsp;&nbsp;&nbsp;<a onclick=\"RefundAuditStateUp2()\" href=\"#\"><span class=\"glyphicon glyphicon-thumbs-down\"></span></a></td>";
                        }
                        str += "</tr>";
                        $("table tbody").append(str);
                    })
                }
            })
        }

        //删除方法
        function deleteState() {
            $.ajax({
                url: "@Url.Action("DelRefund")",
                data: { Rid: ZhuanTai },
                dataType: "json",
                type: "post",
                success: function () {
                    if (confirm("确认删除吗？")) {
                        BindData();
                        alert("删除成功！");
                        return true;
                    } else {
                        return false;
                    }
                }
            })
        }
        //审核通过
        function RefundAuditStateUp1() {
            $.ajax({
                url: "@Url.Action("RefundUpSHZT")",
                data: { Rid: ZhuanTai, RefundAuditStates:2 },
            dataType: "json",
            type: "post",
            success: function () {
                if (confirm("确认审核通过吗？")) {
                    BindData();
                    alert("审核成功！");
                    return true;
                }
            }
        })
        }
        //审核不通过
        function RefundAuditStateUp2() {
            $.ajax({
                url: "@Url.Action("RefundUpSHZT")",
                data: { Rid: ZhuanTai, RefundAuditStates:3 },
            dataType: "json",
            type: "post",
            success: function () {
                if (confirm("确认审核不通过吗？")) {
                    BindData();
                    alert("审核成功！");
                    return true;
                }
            }
        })
        }

    </script>


</body>
</html>
