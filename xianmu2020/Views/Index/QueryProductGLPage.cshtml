    </div>

    <script type="text/javascript">
        //打开添加对话框
        $("#BtnAddCP").click(function () {
            $("#myModal1").modal();
        })
        //打开修改对话框
        $("#UpdateCP").click(function () {
            $("#myModal2").modal();
        })
