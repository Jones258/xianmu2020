                        <div class="col-md-2">
                            <label class="control-label">产品编号</label>
                        </div>
                        <div class="col-md-4" style="margin-left:-20px;margin-top:-10px;">
                            <input type="text" class="form-control" disabled="disabled" placeholder="自动生成，可不填" />
                        </div>
                        <div class="col-md-2" style="margin-left:30px;">
                            <label class="control-label">产品条码</label>
                        </div>
                        <div class="col-md-4" style="margin-left:-25px;margin-top:-11px;">
                            <input type="text" class="form-control"/>
                        </div>
                    </div>
                    <div class="row form-inline form-group">
                        <div class="col-md-2">
                            <label class="control-label">产品名称</label>
                        </div>
                        <div class="col-md-4" style="margin-left:-20px;margin-top:-10px;">
                            <input type="text" class="form-control" />
                        </div>
                        <div class="col-md-2" style="margin-left:30px;">
                            <label class="control-label">产品类别</label>
                        </div>
                        <div class="col-md-4" style="margin-left:-25px;margin-top:-11px;">
                            @Html.DropDownList("Type", null, htmlAttributes: new { @class = "form-control", @style = "width:159px;" })
                        </div>
                    </div>
                    <div class="row form-inline form-group">
                        <div class="col-md-2">
                            <label class="control-label">预警下限</label>
                        </div>
                        <div class="col-md-4" style="margin-left:-20px;margin-top:-10px;">
                            <input type="text" class="form-control" value="0" />
                        </div>
                        <div class="col-md-2" style="margin-left:30px;">
                            <label class="control-label">预警上限</label>
                        </div>
                        <div class="col-md-4" style="margin-left:-25px;margin-top:-11px;">
                            <input type="text" class="form-control" value="0" />
                        </div>
                    </div>
                    <div class="row form-inline form-group">
                        <div class="col-md-2">
                            <label class="control-label">规格</label>
                        </div>
                        <div class="col-md-4" style="margin-left:-20px;margin-top:-10px;">
                            <input type="text" class="form-control" />
                        </div>
                        <div class="col-md-2"  style="margin-left:30px;">
                            <label class="control-label">单位</label>
                        </div>
                        <div class="col-md-4" style="margin-left:-25px;margin-top:-10px;">
                            @Html.DropDownList("Type", null, htmlAttributes: new { @class = "form-control", @style = "width:159px;" })
                        </div>
                    </div>
                    <div class="row form-inline form-group">
                        <div class="col-md-2">
                            <label class="control-label">价格</label>
                        </div>
                        <div class="col-md-4" style="margin-left:-20px;margin-top:-10px;">
                            <input type="text" class="form-control" value="0" />
                        </div>
                        <div class="col-md-2"  style="margin-left:30px;">
                            <label class="control-label">客户</label>
                        </div>
                        <div class="col-md-4" style="margin-left:-25px;margin-top:-10px;">
                            @Html.DropDownList("Type", null, htmlAttributes: new { @class = "form-control", @style = "width:159px;" })
                        </div>
                    </div>
                    <div class="row form-inline form-group">
                        <div class="col-md-2">
                            <label class="control-label">默认仓库</label>
                        </div>
                        <div class="col-md-4" style="margin-left:-20px;margin-top:-10px;">
                            @Html.DropDownList("Type", null, htmlAttributes: new { @class = "form-control", @style = "width:159px;" })
                        </div>
                        <div class="col-md-2"  style="margin-left:30px;">
                            <label class="control-label">默认库位</label>
                        </div>
                        <div class="col-md-4" style="margin-left:-25px;margin-top:-10px;">
                            @Html.DropDownList("Type", null, htmlAttributes: new { @class = "form-control", @style = "width:159px;" })
                        </div>
                    </div>
                    <div class="row form-inline form-group">
                        <div class="col-md-2">
                            <label class="control-label">描述</label>
                        </div>
                        <div class="col-md-4" style="margin-left:-20px;margin-top:-10px;">
                            <input type="text" class="form-control" />
                        </div>                      
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">确定</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">关闭</button>
                </div>
            </div>
        </div>
    </div>

