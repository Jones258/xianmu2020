        //修改状态API1
        function UpDeliveryAuditState1() {
            $.ajax({
                url:"@Url.Action("UpDeliveryAuditState")",
                data: { Did: deleteid, DeliveryAuditStats: 2 },
                dataType:"json",
                type:"post",
                success: function () {
